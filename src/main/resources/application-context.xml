        <property name="host" value="smtp.qq.com" />
        <!-- 端口号 -->
        <property name="port" value="25" />
        <!-- 用户名 -->
        <property name="username" value="1162961885@qq.com" />
        <!--  密码   -->
        <property name="password" value="maidou0824" />
